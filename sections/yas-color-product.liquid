<style>

{% for block in section.blocks %}
  {% if block.settings.img != blank %}
  {% assign color = block.settings.img | image_url | prepend: 'url(' | append: ') no-repeat center' %}
  {% else %}
  {% assign color = block.settings.color %}  
  {% endif %}
  
   fieldset.yas-variantsec-wrapp input[data-optname="Color"][value="{{ block.settings.title | strip }}"]+label {background: {{ color }} !important;background-size: cover !important; cursor: pointer;}
   .yas-collection-grid-wrapp fieldset[name="color"] input[value="{{ block.settings.title | strip }}"] {background: {{ color }} !important;background-size: cover !important; cursor: pointer;}
   color-look.i-yas-color_{{ block.settings.title | strip | escape | downcase | replace: ' ', '_' }} {background: {{ color }} !important;background-size: cover !important;}
     i.yas-color_{{ block.settings.title | strip | escape | downcase | replace: ' ', '_' }} {background: {{ color }} !important;background-size: cover !important;}
{% endfor %}
   color-look{cursor: pointer;}
</style>
{% schema %}
  {
    "name": "Color product Yas",
    "settings": [
      
    ],
    "blocks": [
      {
        "type": "color",
        "name": "product color css",
        "settings": [
          {
            "type": "color",
            "id": "color",
            "label": "Color",
            "default": "#FFFFFF"
          },
             {
            "type": "image_picker",
            "id": "img",
            "label": "Photo"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Name color in product"
          }
        ]
      }
    ]
  }
{% endschema %}

