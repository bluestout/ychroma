    },
    {
      "id": "text-box",
      "type": "url",
      "label": "Video Source"
    },
     {
      "id": "title",
      "type": "text",
      "label": "Video Heading"
    },
    {
      "id": "detail",
      "type": "text",
      "label": "Video Detail"
    },
     {
      "id": "btn_text",
