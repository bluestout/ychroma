{%- liquid 
  assign medias = section.blocks | where: 'type', 'media'
  assign logos = section.blocks | where: 'type', 'logo'
-%}

<div class="container">
  <div class="media-wrapper">
    {%- for block in medias %}
      <div class="media-item" style="--background-color: rgba(0, 0, 0, {{ block.settings.opacity }})">
        {%- if block.settings.video != blank -%}
          <div class="video{% if block.settings.video_mb != blank %} small--hide{% endif %}">
            <video class="video_not-yas" poster="{{ block.settings.image | image_url }}" autoplay="autoplay" loop="loop" muted="" defaultmuted="" playsinline="">
              <source src="{{ block.settings.video }}" type="video/mp4">
            </video>
          </div>
          {%- if block.settings.video_mb != blank %}
            <div class="video medium-up--hide">
              <video class="video_not-yas" poster="{{ block.settings.image_mb | image_url }}" autoplay="autoplay" loop="loop" muted="" defaultmuted="" playsinline="">
                <source src="{{ block.settings.video_mb }}" type="video/mp4">
              </video>
            </div>
          {%- endif -%}
        {%- elsif block.settings.image != blank -%}
          <div class="image{% if block.settings.image_mb != blank %} small--hide{% endif %}">
            <img
              src="{{ block.settings.image | img_url: '1920x' }}"
              width="{{ block.settings.image.width }}"
              height="{{ block.settings.image.height }}"
              alt="{{ block.settings.image.alt }}"
              loading="lazy"
            >
          </div>
          {%- if block.settings.image_mb != blank -%}
            <div class="image medium-up--hide">
              <img
                src="{{ block.settings.image_mb | img_url: '1920x' }}"
                width="{{ block.settings.image_mb.width }}"
                height="{{ block.settings.image_mb.height }}"
                alt="{{ block.settings.image_mb.alt }}"
                loading="lazy"
              >
            </div>
          {%- endif -%}
        {%- endif -%}
        {%- if block.settings.link != blank -%}
          <a href="{{ block.settings.link }}" class="media-item--link"></a>
        {%- endif -%}
      </div>
    {%- endfor -%}
  </div>

  {%- if section.settings.title != blank -%}
    <div class="content-wrapper {{ section.settings.text_align }}">
      <h2 class="content-heading">
        <a href="{{ section.settings.url }}">{{ section.settings.title }}</a>
      </h2>
      {%- if section.settings.title_sub != blank -%}
        <a href="{% if section.settings.url_btn != blank %}{{ section.settings.url_btn }}{% else %}#{{ section.id }}-popup{% endif %}" class="content-sub-heading {% if section.settings.url_btn == blank %}popup-defolt{% endif %}">{{ section.settings.title_sub }}</a>
      {%- endif -%}
    </div>
  {%- endif -%}

  {%- if logos.size > 0 -%}
    <div class="logos-wrapper">
      <h2 class="logos-heading">{{ section.settings.logolist_heading | default: 'As Seen In' }}</h2>
      <div class="swiper logos-swiper">
        <div class="swiper-wrapper">
          {%- for block in logos -%}
            <div class="swiper-slide">
              <img
                src="{{ block.settings.image | img_url: 'master' }}"
                width="{{ block.settings.image.width }}"
                height="{{ block.settings.image.height }}"
                alt="{{ block.settings.image.alt | default: block.settings.image.title }}"
              >
            </div>
          {%- endfor -%}
        </div>
      </div>
    </div>
  {%- endif -%}
  
  {% if medias[0].settings.video != blank %}
    <div id="{{ section.id }}-popup" class="mfp-hide white-popup-block">
      <video  loop controls controlslist="nodownload" preload="none">
        <source src="{{ medias[0].settings.video }}" type="video/mp4">
      </video>
    </div>
  {% endif %}
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const swiper1_2 = new Swiper('#shopify-section-{{ section.id }} .logos-swiper', {
      spaceBetween: 25,
       autoplay: {
        delay: 3000,
      },
      breakpoints: {
        0: {
          slidesPerView: 1,
          loop: true,
          effect: "fade",
          fadeEffect: {
            crossFade: true
          },
        },
        990: {
          slidesPerView: 'auto',
          spaceBetween: 65,
          effect: false  
        }
      }
    });
  })
</script>

{%- schema -%}
{
	"name": "Media with Text",
	"tag": "section",
	"class": "es-media-with-text",
	"settings": [
		{
			"type": "text",
			"id": "title",
			"label": "Title",
			"default": "Title"
		},
		{
			"type": "url",
			"id": "url",
			"label": "Link for title"
		},
		{
			"type": "text",
			"id": "title_sub",
			"label": "sub Title (btn)",
			"default": "sub Title"
		},
		{
			"type": "url",
			"id": "url_btn",
			"label": "Link for button"
		},
    {
      "type": "select",
      "id": "text_align",
      "label": "Align text",
      "options": [
        {
          "value": "right bottom",
          "label": "Right Bottom"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "center"
    },
    {
      "type": "inline_richtext",
      "id": "logolist_heading",
      "label": "Logo List Heading",
      "default": "As Seen In"
    }
	],
  "blocks": [
    {
      "type": "media",
      "name": "Media",
      "limit": 2,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "image_mb",
          "label": "Mobile Image"
        },
        {
          "type": "url",
          "id": "video",
          "label": "Video"
        },
        {
          "type": "url",
          "id": "video_mb",
          "label": "Mobile Video"
        },
        {
          "type": "range",
          "id": "opacity",
          "min": 0,
          "max": 1,
          "step": 0.1,
          "unit": "px",
          "label": "Opacity dark",
          "default": 1
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    },
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
	"presets": [
		{
			"name": "@ Media with Text"
		}
	]
}
{%- endschema -%}