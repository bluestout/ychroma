<div class="yas-sliderimage-tab">
<div class="yas-sliderimage-wrapp">
      
      <div class="swiper yas-sliderimage-slider">
        {% assign position_slide_itr = 0 %}
        {% assign position_slide = 0 %}
        <div class="swiper-wrapper">
        {% for block in section.blocks %}
          {% if block.settings.title != 'All' %}
            {% for article in block.settings.blog.articles %}
              {% if section.settings.article.title == article.title %}
                {% assign position_slide = position_slide_itr %}
              {% else %}
                {% assign position_slide_itr = position_slide_itr | plus: 1 %}
              {% endif %}
              <div class="swiper-slide" data-name="{{ block.settings.title }}">
                <a href="{{ article.url }}">
               <!-- <div class="blog_slider-bread">Journal | {{ block.settings.title }}</div> -->
                <div class="blog_slider-img">
                  <img src="{{ article.image.src | img_url: 'x1' }}" alt="{{ article.title }}"
                  srcset="{{ article.image.src | img_url: 'x500' }}"
                  loading="lazy"
                  >
                  <div class="swiper-lazy-preloader"></div>
                </div>
                <div class="blog_slider-info">
                  <h5>{{ article.metafields.custom.description }}</h5>
                  <h3>{{ article.title }}</h3>
                  <span class="blog_slider-tag" style="background-color: {{ block.settings.background }};">{{ block.settings.title }}</span>
                </div>
                </a>
              </div>
            {% endfor %}
          {% endif %}
          {%- endfor -%}
        </div>
          <div class="swiper-pagination"></div>
      </div>
