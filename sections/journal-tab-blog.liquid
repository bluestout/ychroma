</div>
</div>




<div class="yas_blog-menu-w  ">
  <div class="yas_blog-menu">
    {%- for block in section.blocks -%}
      <a href="#" data-tab="{{ block.settings.title }}" data-active="" class="yas_blog-menu-item" style="background-color: {{ block.settings.background }}; color: {{ block.settings.color }};">{{ block.settings.title }}</a>
    {%- endfor -%}
  </div>
</div>
<div class="masonry-wrapp">
 
  {% for block in section.blocks %}

    {% if block.settings.title == 'All' %}
      <div class="masonry-tab-sec" data-name="{{ block.settings.title }}" data-tab="{% if forloop.first %}active{% else %}false{% endif %}">
       
        {% for blogAll in section.blocks %}
          {% if blogAll.settings.title != 'All' %}
            
            {%- for article in blogAll.settings.blog.articles -%}
            <article>
               <a href="{{ article.url }}">
               <img src="{{ article.image.src | img_url: '610x' }}" alt="{{ article.title }}">
               <p>{{ article.metafields.custom.description }}</p>
               <h3>{{ article.title }}</h3>
               <span class="masonry-blog_tag" style="background-color: {{ blogAll.settings.blog.metafields.custom.color }};">{{ blogAll.settings.blog.title }}</span>
               </a>
            </article>
            {%- endfor -%}
          {% endif %}
        {%- endfor -%}
      </div>
    {% else %}
    <div class="masonry-tab-sec" data-name="{{ block.settings.title }}" data-tab="{% if forloop.first %}active{% else %}false{% endif %}">
      {%- for article in block.settings.blog.articles -%}
        <article>
           <a href="{{ article.url }}">
           <img src="{{ article.image.src | img_url: '610x' }}" alt="{{ article.title }}">
           <p>{{ article.metafields.custom.description }}</p>
           <h3>{{ article.title }}</h3>
           <span class="masonry-blog_tag" style="background-color: {{ block.settings.blog.metafields.custom.color }};">{{ block.settings.blog.title }}</span>
           </a>
        </article>
      {%- endfor -%}
    </div>
    {% endif %}
  {%- endfor -%}
</div>

<script>
   
   $(function(){
      const slidemass =  $('#shopify-section-{{section.id}} .swiper .swiper-slide');
     
     $('.yas_blog-menu-w a').on('click', function(e){
         e.preventDefault();
         swiper.removeAllSlides();
         let filter = slidemass;
       
         let tab_name = $(this).attr('data-tab');
         console.log(tab_name)
         $('.masonry-tab-sec').attr('data-tab', 'false');
         $('.masonry-tab-sec[data-name="'+tab_name+'"]').attr('data-tab', 'active');

          
          if(tab_name == 'All'){
            $('.yas-sliderimage-slider .swiper-slide').css('display', '')
          }else{
            $('.yas-sliderimage-slider .swiper-slide').css('display', 'none')
            $('.yas-sliderimage-slider .swiper-slide[data-name="'+tab_name+'"]').css('display', '')
             filter = slidemass.filter(function(){
                   return $(this).attr('data-name') == tab_name;
                });
          }
          let index = $('.yas-sliderimage-slider .swiper-slide[data-name="'+tab_name+'"]').first().attr('data-swiper-slide-index');
          let slidesCountFilter = $('.yas-sliderimage-slider .swiper .swiper-slide').length;

          

         
          swiper.addSlide(1, filter);
          swiper.slideToLoop(filter.length)
          
          
          
          return false;
   
     })

     
     
     let slidesCount = $('#shopify-section-{{section.id}} .swiper .swiper-slide').length;


     
     
     var swiper = new Swiper('#shopify-section-{{section.id}} .swiper', {
        loop: true,
        centeredSlides: true,
        slidesPerView: '1',
        loopedSlides: slidesCount,
        watchSlidesVisibility: true,
        spaceBetween: 15,
        observer: true,
        initialSlide:{{ position_slide }},
        
        pagination: {
          el: '.swiper-pagination',
            dynamicBullets: true,
        },
        navigation: {
          nextEl: '#shopify-section-{{section.id}} .swiper-button-next',
          prevEl: '#shopify-section-{{section.id}} .swiper-button-prev',
        }
      });

   
     
   })
</script>


