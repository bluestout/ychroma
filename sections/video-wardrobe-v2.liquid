{% if section.settings.btn_link != blank %}
  <div id="{{ section.id }}-popup" class="mfp-hide white-popup-block">
    <video loop controls controlslist="nodownload" preload="metadata">
      <source src="{{ section.settings.btn_link }}" type="video/mp4">
    </video>
  </div>

  <script defer>
    $(document).ready(function () {
      $('.popup-defolt').magnificPopup({
        type: 'inline',
        preloader: false,
        callbacks: {
          beforeClose: function () {
            document.querySelector('.white-popup-block video').pause();
            document.querySelector('#shopify-section-{{section.id}} video').play();
          },
          open: function () {
            document.querySelector('#shopify-section-{{section.id}} video').pause();
          },
        },
      });
      $('.popup-frame').magnificPopup({
        type: 'iframe',
        mainClass: 'mfp-fade',
        removalDelay: 160,
        preloader: false,
        fixedContentPos: false,
        iframe: {
          patterns: {
            youtube: {
              index: 'youtu.be/',
              id: '/',
              src: 'https://www.youtube.com/embed/%id%?rel=0&autoplay=1',
            },
            vimeo: {
              index: 'vimeo.com/',
              id: '/',
              src: '//player.vimeo.com/video/%id%?autoplay=1',
            },
          },
        },
        callbacks: {
          beforeClose: function () {
            document.querySelector('#shopify-section-{{section.id}} video').play();
          },
          open: function () {
            document.querySelector('#shopify-section-{{section.id}} video').pause();
          },
        },
      });
    });
  </script>

  <style>
    .mfp-fade.mfp-bg {
      opacity: 0;
      -webkit-transition: all 0.15s ease-out;
      -moz-transition: all 0.15s ease-out;
      transition: all 0.15s ease-out;
    }
    .mfp-fade.mfp-bg.mfp-ready {
      opacity: 0.8;
    }
    .mfp-fade.mfp-bg.mfp-removing {
      opacity: 0;
    }

    .mfp-fade.mfp-wrap .mfp-content {
      opacity: 0;
      -webkit-transition: all 0.15s ease-out;
      -moz-transition: all 0.15s ease-out;
      transition: all 0.15s ease-out;
    }
    .mfp-fade.mfp-wrap.mfp-ready .mfp-content {
      opacity: 1;
    }
    .mfp-fade.mfp-wrap.mfp-removing .mfp-content {
      opacity: 0;
    }
    .mfp-bg.mfp-ready {
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 1042;
      overflow: hidden;
      position: fixed;
      background: #0b0b0b;
      opacity: 0.8;
      display: block;
    }
    .white-popup-block {
      max-width: 60%;
      height: auto;
      margin: 0 auto;
      position: relative;
    }
    .mfp-close-btn-in .mfp-close {
      color: #fff;
      right: -44px;
      top: -40px;
      font-size: 44px;
    }
  </style>
{% endif %}

{% comment %} Added JS for play/pause controls {% endcomment %}
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const video = document.getElementById('background-video-{{ section.id }}');
    const playButton = document.querySelector('[data-play-button]');
    const titleWrapper = document.querySelector('#shopify-section-{{ section.id }} .video-title-btn-inline-wrapper');
    const customPlayButtonWrapper = document.querySelector('#shopify-section-{{ section.id }} .play-button'); // Select the outer div

    if (video && playButton && titleWrapper && customPlayButtonWrapper) {
      playButton.addEventListener('click', () => {
        video.controls = true;
        video.play();
        titleWrapper.classList.add('hidden');
        // Hide the custom play button itself when controls are shown
        if (customPlayButtonWrapper) {
          customPlayButtonWrapper.classList.add('hidden');
        }
      });

      video.addEventListener('pause', () => {
        // Only revert UI if the video is actually paused (not ended, etc.)
        // and controls were previously enabled by our button
        if (video.controls) {
          video.controls = false;
          titleWrapper.classList.remove('hidden');
          // Show the custom play button again when paused
          if (customPlayButtonWrapper) {
            customPlayButtonWrapper.classList.remove('hidden');
          }
        }
      });

      // Optional: Handle the case where the video ends
      video.addEventListener('ended', () => {
        video.controls = false;
        titleWrapper.classList.remove('hidden');
        if (customPlayButtonWrapper) {
          customPlayButtonWrapper.classList.remove('hidden');
        }
        // Optionally rewind the video
        // video.currentTime = 0;
      });
    }
  });
</script>

