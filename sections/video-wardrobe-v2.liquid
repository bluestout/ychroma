<style>
       #shopify-section-{{section.id}}:before{
         width: 100%;height: 100%;position: absolute;
        {% if section.settings.overlay_show %}
          {% if section.settings.overlay_opacity > 9 %}
            {% assign prepend_zeero = '0.' %}
          {% else %}
            {% assign prepend_zeero = '0.0' %}
          {% endif %}
        content: "";
        background-color: rgba(0,0,0, {{section.settings.overlay_opacity | prepend: prepend_zeero }});
        opacity: 1;
        {% else %}
        content: none !important;
        {% endif %}
      }
      #shopify-section-{{section.id}}{
        /* max-height: 662px; */
        overflow: hidden;
        position: relative;

      }

      #shopify-section-{{section.id}} video{
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: flex;
        min-height: 456px;
      }
      #shopify-section-{{section.id}} .video-wardrobe-wrapper{
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        min-width: 340px;
      }
      #shopify-section-{{section.id}} h2{
        text-align: center;
        letter-spacing: 0px;
        color: #FFFFFF;
        font-family: "CentraNo2-Bold";
        font-size: 40px;

      }
      #shopify-section-{{section.id}} a{
        letter-spacing: 3px;
        color: #F7B718;
        border: 5px solid #EDBA44;
        font-family: "CentraNo2-Bold";
        font-size: 20px;
        display: inline-flex;
        align-items: center;
        padding: 20px;
        margin: 45px auto 0;
        transition: all 0.3s ease;
        line-height: normal;
      }
      #shopify-section-{{section.id}} a:hover{
        text-decoration: none;
        background-color: #FFC200;
        color: #fff;
      }
      #shopify-section-{{section.id}} a svg{
        margin-left: 25px;
      }
      #shopify-section-{{section.id}} a path{
        transition: all 0.3s ease;
        fill: #F7B718;
      }
      #shopify-section-{{section.id}} a:hover path{
        fill: #fff;
      }
      @media (max-width: 989px){

        #shopify-section-{{section.id}} h2{
          font-size: 25px;
        }
        #shopify-section-{{section.id}} a{
          font-size: 14px;
          letter-spacing: 2.1px;
          padding: 8px 10px;
        }
        #shopify-section-{{section.id}} a svg{
          margin-left: 10px;
        }
      }

      .play-button {
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
    }

    .cicle-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        border: 1px solid white;
        border-radius: 50px;
        padding: 15px;
        background:rgba(0,0,0,.5);
    }

    .cicle-wrapper svg {
        width: 20px;
        height: 20px;
        position: relative;
        left: 2px;
        bottom: -1px;
    }

    .video-title-btn-inline-wrapper {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 10px;
  }

    .video-title-btn-inline-wrapper h2 {
      margin-bottom: 0px;
    }

    @media (min-width: 750px) {
      .video-title-btn-inline-wrapper h2 {
        white-space: nowrap;
    }
    }

    /* Added styles for toggling visibility */
    .video-title-btn-inline-wrapper.hidden,
    .play-button.hidden {
      display: none;
    }

    .video-wardrobe-v2 h2 {
        font-family: 'Centra_No2' !important;
      }

    @media (max-width: 749px) {
      .video-wardrobe-v2 h2 {
        font-size: 18px!important;
        font-family: 'Centra_No2' !important;
      }
      .video-wardrobe-v2 .cicle-wrapper svg {
        width: 15px;
        height: 15px;
      }
    }

    @media (min-width: 750px) {
      .video-wardrobe-v2 {
        margin-top: 60px;
      }
    }
    .firefox-browser .video-wardrobe_title_info{ 
      max-height: 30px;
    }

    @media (max-width: 999px) {
      .firefox-browser .video-wardrobe_title_info {
        max-height: 20px;
      }
    }
</style>

