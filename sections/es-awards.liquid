<style>
  #shopify-section-{{ section.id }} {
    --padding-top: {{ section.settings.padding_top }}px;
    --padding-bottom: {{ section.settings.padding_bottom }}px;
    --background-color: {{ section.settings.background_color }};
  }

  @media (max-width: 768px) {
    #shopify-section-{{ section.id }} {
      --padding-top: {{ section.settings.padding_top | times: 0.5 }}px;
      --padding-bottom: {{ section.settings.padding_bottom | times: 0.5 }}px;
      --background-color: {{ section.settings.background_color }};
    }
  }
</style>

<div class="container">
  <div class="row">
    {%- for block in section.blocks -%}
      {%- assign image = block.settings.image -%}
      <div class="image">
        <img
          src="{{ image | img_url: 'master' }}"
          width="{{ image.width }}"
          height="{{ image.height }}"
          alt="{{ image.alt }}"
        >
      </div>
    {%- endfor -%}
  </div>
</div>

{%- schema -%}
{
  "name": "Awards",
  "class": "es-awards",
  "tag": "section",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 400,
      "step": 4,
      "unit": "px",
      "default": 76,
      "label": "Padding top"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 400,
      "step": 4,
      "unit": "px",
      "default": 76,
      "label": "Padding bottom"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "@ Awards"
    }
  ]
}
{%- endschema -%}