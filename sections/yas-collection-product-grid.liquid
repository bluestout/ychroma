            var ascending = false;
            $(this).val() == 'price-descending' ? ascending = true : ascending = false;
            var sorted = $('#product-grid li').sort(function(a,b){
                return (ascending ==
                       (convertToNumber($(a).find('.money').html()) < 
                        convertToNumber($(b).find('.money').html()))) ? 1 : -1;
            });
            $('#product-grid').html(sorted);
          }
        
