        </div>
</div>

<script defer>
  $(function(){
    let slidesCount = $('#shopify-section-{{section.id}} .swiper .swiper-slide').length;
    let swiper = new Swiper('#shopify-section-{{section.id}} .swiper', {
      loop: true,
      centeredSlides: true,
      slidesPerView: '1',
      loopedSlides: slidesCount,
      watchSlidesVisibility: true,
      spaceBetween: 15,
      pagination: {
        el: '.swiper-pagination',
      },
      navigation: {
        nextEl: '#shopify-section-{{section.id}} .swiper-button-next',
        prevEl: '#shopify-section-{{section.id}} .swiper-button-prev',
      }
    });
  })
</script>



