      <div class="yas-youtube-secdesc">{{ collection.metafields.custom.video_section.value.under_title }}</div>
      <div class="yas-youtube-title">{{ collection.metafields.custom.video_section.value.title | metafield_tag  }}</div>
      <div class="swiper yas-youtubeimage-slider">
        <div class="swiper-wrapper">
    
            <div class="swiper-slide">
              <div class="yas-youtubeimage-img" data-frane="{{ collection.metafields.custom.video_section.value.link }}">
              <img src="{{ collection.metafields.custom.video_section.value.image | img_url: 'x1' }}" alt="{{ section.settings.title_text }}"
                srcset="{{ collection.metafields.custom.video_section.value.image | img_url: 'master' }}"
                    loading="lazy"
                >
               <svg height="100%" version="1.1" viewBox="0 0 68 48" width="100%"><path class="ytp-large-play-button-bg" d="M66.52,7.74c-0.78-2.93-2.49-5.41-5.42-6.19C55.79,.13,34,0,34,0S12.21,.13,6.9,1.55 C3.97,2.33,2.27,4.81,1.48,7.74C0.06,13.05,0,24,0,24s0.06,10.95,1.48,16.26c0.78,2.93,2.49,5.41,5.42,6.19 C12.21,47.87,34,48,34,48s21.79-0.13,27.1-1.55c2.93-0.78,4.64-3.26,5.42-6.19C67.94,34.95,68,24,68,24S67.94,13.05,66.52,7.74z" fill="#f00"></path><path d="M 45,24 27,14 27,34" fill="#fff"></path></svg>

              </div>
              <div class="yas-youtubeimage-cont">
                <div class="yas-youtubeimage-title">{{ collection.metafields.custom.video_section.value.title_under_video | metafield_tag  }}</div>
                <p>{{ collection.metafields.custom.video_section.value.description_under }}</p>
              </div>
            </div>
       
        </div>
     
      </div>    
</div>
{% endif %}



<script defer>
  $(function(){
   

    $('#shopify-section-{{section.id}} .yas-youtubeimage-img').on('click', function(){
      $.magnificPopup.open({
        items: {
          src: $(this).attr('data-frane'),
          type: 'iframe',
          
        },
        iframe: {
          patterns: {
              youtube: {
                index: 'youtu.be/', // String that detects type of video (in this case YouTube). Simply via url.indexOf(index).
                id: 'be/', // String that splits URL in a two parts, second part should be %id%
                // Or null - full URL will be returned
                // Or a function that should return %id%, for example:
                // id: function(url) { return 'parsed id'; }
                src: '//www.youtube.com/embed/%id%?autoplay=1' // URL that will be set as a source for iframe.
              },
          }
        }
      });
  
    })
    
  })
</script>

