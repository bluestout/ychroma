<style>
  .es-curated-reviews {
    --padding-top: {{ section.settings.padding_top }}px;
    --padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  @media (max-width: 768px) {
    .es-curated-reviews {
      --padding-top: {{ section.settings.padding_top | times: 0.5 }}px;
      --padding-bottom: {{ section.settings.padding_bottom | times: 0.5 }}px;
    }
  }
</style>

<div class="container">
  <div class="swiper curated-reviews-swiper">
    <div class="swiper-wrapper">
      {%- for block in section.blocks -%}
        <div class="swiper-slide">
          <div class="cr-text">{{ block.settings.text }}</div>
          <div class="cr-name">{{ block.settings.name }}</div>
        </div>
      {%- endfor -%}
    </div>

    <div class="swiper-pagination"></div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const sw = new Swiper('#shopify-section-{{ section.id }} .curated-reviews-swiper', {
      slidesPerView: 1,
      autoHeight: false,
      pagination: {
        el: '#shopify-section-{{ section.id }} .swiper-pagination',
        type: 'bullets',
        clickable: true
      },
    })
  })
</script>

{%- schema -%}
{
  "name": "Curated Reviews",
  "tag": "section",
  "class": "es-curated-reviews",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 400,
      "step": 4,
      "unit": "px",
      "default": 76,
      "label": "Padding top"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 400,
      "step": 4,
      "unit": "px",
      "default": 76,
      "label": "Padding bottom"
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "inline_richtext",
          "id": "name",
          "label": "Name"
        }
      ]
    }
  ]
}
{%- endschema -%}