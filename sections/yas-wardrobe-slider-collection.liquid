<style>
  #shopify-section-{{section.id}}{
    padding-top: 75px;
  }
  #shopify-section-{{section.id}} .swiper-slide{
    max-height: 836px;
    width: 100%;
  }
  #shopify-section-{{section.id}} .yas_wardrobe-slider_image{
    position: relative;
    max-height: 836px;
  }
  #shopify-section-{{section.id}} .swiper-slide img{
    display: flex;
    width: 100%;
    height: 836px;
    object-fit: cover;
    object-position: center;
  }
  #shopify-section-{{section.id}} .yas_wardrobe-slider_info{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    margin: 0 auto;
  }
  #shopify-section-{{section.id}} .yas_wardrobe-slider_image a{
    width: 403px;
    border: 3px solid #FFFFFF;
    letter-spacing: 0px;
    color: #FFFFFF;
    font-family: CentraNo2-Extrabold, sans-serif !important;
    font-style: normal;
    font-weight: 900;
    font-size: 20px;
    display: flex;
    height: 50px;
    margin: 0 auto;
    align-items: center;
    justify-content: center;
    text-transform: uppercase;
    background-color: transparent;
    transition: all 0.3s ease;
  }
  #shopify-section-{{section.id}} .yas_wardrobe-slider_image a:hover{
    background-color: #fff;
    border-color: #fff;
    color: #000;
  }
  #shopify-section-{{section.id}} h2{
    text-align: center;
    color: #FFFFFF;
    font-family: "CentraNo2-Bold";
    font-size: 45px;
    line-height: 50px;
    letter-spacing: 3.5px; 
    margin-bottom: 50px;
  }
  #shopify-section-{{section.id}} h3{
    font-size: 30px;
    line-height: 50px;
    letter-spacing: 0px;
    color: #FFFFFF;
    font-family: "CentraNo2-Bold";
    margin-bottom: 35px;
    text-align: center;
  }
  #shopify-section-{{section.id}} .yas_wardrobe-slider_color{
    padding: 35px 0;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    bottom: 20px;
    left: 0;
    right: 0;
    margin: 0 auto;
  }
  #shopify-section-{{section.id}} .yas_wardrobe-slider_color i{
    width: 42px;
    height: 42px;
    border-radius: 50%;
    margin: 0 2.5px;
  }
  #shopify-section-{{section.id}} .swiper-pagination{
    position: absolute;
    top: 50px;
    display: flex;
    flex-wrap: nowrap;
    bottom: unset;
    align-items: center;
    justify-content: space-around;
    width: 100%;
    margin: 0 auto;
  }
  #shopify-section-{{section.id}} .swiper-pagination-bullet.swiper-pagination-bullet-active{
    background-color: transparent;
    color: #fff;
    border-bottom: 3px solid white;
    padding-left: 0px;
    padding-right: 0px;
    padding-bottom: 3px;
    
  }
  #shopify-section-{{section.id}} .swiper-pagination-bullet{
    background-color: transparent;
    color: #fff;
  
    letter-spacing: 0px;
    font-family: "CentraNo2-Bold";
    font-size: 30px;
    margin: 0;
    border-radius: 0;
    display: flex;
    width: auto;
    height: auto;
    opacity: 1;
  }
  #shopify-section-{{section.id}} .swiper-button-next,
  #shopify-section-{{section.id}} .swiper-button-prev{
    display: flex;
    height: 122px;
    width: 40px;
  }
  #shopify-section-{{section.id}} .swiper-button-next{
    right: 60px;
  }
  #shopify-section-{{section.id}} .swiper-button-prev{
    left: 60px;
  }
  #shopify-section-{{section.id}} .swiper-button-next:after,
  #shopify-section-{{section.id}} .swiper-button-prev:after{

    content: none;
  }
  @media (max-width: 1350px){
    #shopify-section-{{section.id}}{
      padding-top: 0px;
    }
    #shopify-section-{{section.id}} .swiper-slide img{
      height: 513px;
    }
    #shopify-section-{{section.id}} .swiper-pagination-bullet{
      display: none;
    }
    #shopify-section-{{section.id}} .swiper-pagination-bullet.swiper-pagination-bullet-active{
      display: flex;
      height: 68px;
      align-items: center;
      min-width: 172px;
      justify-content: center;
      font-size: 16px;
      padding: 0 15px;
      border-bottom: 0px;
    }
    #shopify-section-{{section.id}} .swiper-pagination{
      justify-content: center;
    }
    #shopify-section-{{section.id}} .yas_wardrobe-slider_info{
      width: 100%;
    }
    #shopify-section-{{section.id}} h3{
      font-size: 16px;
      line-height: 20px;
      margin-bottom: 10px;
    }
    #shopify-section-{{section.id}} .yas_wardrobe-slider_image a{
      width: 261px;
      font-size: 14px;
      height: 36px;
    }
    #shopify-section-{{section.id}} .swiper-button-next,
    #shopify-section-{{section.id}} .swiper-button-prev{
      height: 68px;
      width: 19px;
      top: 50px;
      margin-top: 0;
    }
    #shopify-section-{{section.id}} .swiper-button-next{
      right: 45px;
    }
    #shopify-section-{{section.id}} .swiper-button-prev{
      left: 45px;
    }
  }
</style>
<div class="yas_wardrobe-wrapp">
  <h2>{{ section.settings.title }}</h2>
    
      <div class="swiper yas_wardrobe-slider">
        <div class="swiper-pagination"></div>
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide">
              <div class="yas_wardrobe-slider_image">
                <img src="{{ block.settings.image | img_url: 'x1' }}" alt="{{ block.settings.title }}"
                  srcset="{{ block.settings.image | img_url: 'x600' }}"
                    loading="lazy"
                  >
                <div class="yas_wardrobe-slider_info">
                  <h3>{{ block.settings.description }}</h3>
                  <a href="{{ block.settings.url }}">EXPLORE LOOK</a>
                </div>
                 <div class="yas_wardrobe-slider_color">
    
                  {% if block.settings.show_color1 %}<i style="background-color: {{ block.settings.color1 }};"></i>{% endif %}
                  {% if block.settings.show_color2 %}<i style="background-color: {{ block.settings.color2 }};"></i>{% endif %}
                  {% if block.settings.show_color3 %}<i style="background-color: {{ block.settings.color3 }};"></i>{% endif %}
                  {% if block.settings.show_color4 %}<i style="background-color: {{ block.settings.color4 }};"></i>{% endif %}
                  {% if block.settings.show_color5 %}<i style="background-color: {{ block.settings.color5 }};"></i>{% endif %}
                   
                </div>
              </div>
            </div>
          {% endfor %}
        </div>

        
        <div class="swiper-button-prev">
          <svg xmlns="http://www.w3.org/2000/svg" width="44.942" height="129.109" viewBox="0 0 44.942 129.109">
            <path d="M0,0,61.109,38.99,122.2,0" transform="translate(41.49 3.452) rotate(90)" fill="none" stroke="#fff" stroke-linecap="round" stroke-linejoin="round" stroke-width="5"/>
          </svg>
        </div>
        <div class="swiper-button-next">
          <svg xmlns="http://www.w3.org/2000/svg" width="44.942" height="129.109" viewBox="0 0 44.942 129.109">
            <path d="M0,0,61.109,38.99,122.2,0" transform="translate(3.452 125.657) rotate(-90)" fill="none" stroke="#fff" stroke-linecap="round" stroke-linejoin="round" stroke-width="5"/>
          </svg>
        </div>

      </div>
</div>

<script defer>
  $(function(){
    
    let menu = [{% for block in section.blocks %}'{{ block.settings.title }}'{% unless forloop.last %},{% endunless %}{% endfor %}];
    let swiper = new Swiper('#shopify-section-{{section.id}} .swiper', {
      loop: false,
      slidesPerView: 1,
      effect: 'fade',
      fadeEffect: {
        crossFade: true
      },
      navigation: {
        nextEl: '#shopify-section-{{section.id}} .swiper-button-next',
        prevEl: '#shopify-section-{{section.id}} .swiper-button-prev',
      },
      pagination: {
        el: "#shopify-section-{{section.id}} .swiper-pagination",
        clickable: true,
        renderBullet: function (index, className) {
          return '<span class="' + className + '">' + (menu[index]) + "</span>";
        },
      }
    });
  })
</script>
