<style>
  .es-curated-reviews {
    --padding-top: {{ block.settings.padding_top }}px;
    --padding-bottom: {{ block.settings.padding_bottom }}px;
  }

  @media (max-width: 768px) {
    .es-curated-reviews {
      --padding-top: {{ block.settings.padding_top | times: 0.5 }}px;
      --padding-bottom: {{ block.settings.padding_bottom | times: 0.5 }}px;
    }
  }
</style>

<div class="container">
  <div class="swiper curated-reviews-swiper">
    <div class="swiper-wrapper">
      {%- if block.settings.text_1 != blank -%}
        <div class="swiper-slide">
          <div class="cr-text">{{ block.settings.text_1 }}</div>
          <div class="cr-name">{{ block.settings.name_1 }}</div>
        </div>
      {%- endif -%}

      {%- if block.settings.text_2 != blank -%}
        <div class="swiper-slide">
          <div class="cr-text">{{ block.settings.text_2 }}</div>
          <div class="cr-name">{{ block.settings.name_2 }}</div>
        </div>
      {%- endif -%}

      {%- if block.settings.text_3 != blank -%}
        <div class="swiper-slide">
          <div class="cr-text">{{ block.settings.text_3 }}</div>
          <div class="cr-name">{{ block.settings.name_3 }}</div>
        </div>
      {%- endif -%}
    </div>

    <div class="swiper-pagination"></div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const sw = new Swiper('#shopify-block-{{ block.id }} .curated-reviews-swiper', {
      slidesPerView: 1,
      autoHeight: false,
      pagination: {
        el: '#shopify-block-{{ block.id }} .swiper-pagination',
        type: 'bullets',
        clickable: true
      },
    })
  })
</script>